{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2015"
    ],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./scripts",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "test/**/*.spec.ts"
  ]
}
